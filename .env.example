# Configuración de Base de Datos
# Para desarrollo local (SQLite)
DATABASE_URL=sqlite:///sistema_camaras.db

# Para producción (PostgreSQL en Railway)
# DATABASE_URL=postgresql://usuario:password@host:puerto/database

# Clave secreta para sesiones Flask
SECRET_KEY=dev-secret-key-change-in-production

# Entorno de desarrollo
FLASK_ENV=development
FLASK_DEBUG=True

# Configuración de Google Maps (para geolocalización)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Configuración de Email (opcional para notificaciones)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@ufro.cl
MAIL_PASSWORD=your-app-password
