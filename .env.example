# ================================
# VARIABLES DE ENTORNO - SISTEMA DE GESTIÓN DE CÁMARAS UFRO
# ================================
# Copiar este archivo a .env y configurar los valores según el entorno

# ================================
# CONFIGURACIÓN GENERAL
# ================================

# Entorno de aplicación
# Opciones: development, testing, staging, production
FLASK_ENV=development

# Clave secreta para sesiones y tokens (CAMBIAR EN PRODUCCIÓN)
SECRET_KEY=your-secret-key-here-change-in-production

# Nombre de la aplicación
APP_NAME="Sistema de Gestión de Cámaras UFRO"
APP_VERSION="1.0.0"

# ================================
# BASE DE DATOS
# ================================

# Desarrollo (SQLite)

# Producción PostgreSQL (Railway/Heroku)

# Variables específicas para Railway

# Variables específicas para Heroku
# HEROKU=1

# ================================
# CONFIGURACIÓN DE SEGURIDAD
# ================================

# Salt para contraseñas (CAMBIAR EN PRODUCCIÓN)
SECURITY_PASSWORD_SALT=your-password-salt-here

# Configuración de cookies
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Tiempo límite para CSRF (segundos)
WTF_CSRF_TIME_LIMIT=3600

# ================================
# CONFIGURACIÓN DE UPLOADS
# ================================

# Carpeta de uploads
UPLOAD_FOLDER=uploads

# Tamaño máximo de archivo (bytes)
MAX_CONTENT_LENGTH=16777216

# Extensiones permitidas (separadas por comas)
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,xlsx,xls,doc,docx

# ================================
# CONFIGURACIÓN DE EMAIL
# ================================

# Servidor SMTP
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true

# Credenciales de email
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-app-password

# ================================
# CONFIGURACIÓN DE LOGGING
# ================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=logs/app.log

# ================================
# CONFIGURACIÓN DE CACHE
# ================================

# URL de Redis (opcional)
REDIS_URL=redis://localhost:6379/0

# Configuración de cache
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# ================================
# CONFIGURACIÓN DE CORS
# ================================

# Orígenes permitidos para CORS (separados por comas)
CORS_ORIGINS=*

# ================================
# CONFIGURACIÓN DE TAREAS ASÍNCRONAS
# ================================

# Celery broker (Redis)
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery result backend
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ================================
# CONFIGURACIÓN DE MONITOREO
# ================================

# Sentry DSN para monitoreo de errores (opcional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================================
# CONFIGURACIÓN ESPECÍFICA DEL DOMINIO
# ================================

# URL base de la aplicación
BASE_URL=https://your-domain.com

# Configuración de CSRF para el dominio
CSRF_TRUSTED_ORIGINS=https://your-domain.com

# ================================
# CONFIGURACIÓN DE DESARROLLO
# ================================

# Debug mode (solo desarrollo)
DEBUG=true

# Auto-reload (solo desarrollo)
FLASK_DEBUG=true

# Base de datos de testing

# ================================
# VARIABLES ESPECÍFICAS DE RAILWAY
# ================================

# Variables automáticas de Railway (no modificar)
# PORT=8000

# ================================
# VARIABLES ESPECÍFICAS DE HEROKU
# ================================

# Variables automáticas de Heroku (no modificar)
# HEROKU=1
# PORT=5000

# ================================
# CONFIGURACIÓN DE PUERTOS
# ================================

# Puerto para el servidor
PORT=8000

# Host para el servidor
HOST=0.0.0.0

# ================================
# CONFIGURACIÓN DE ARCHIVOS ESTÁTICOS
# ================================

# Carpeta de archivos estáticos
STATIC_FOLDER=static

# Carpeta de templates
TEMPLATES_FOLDER=templates

# Cache de archivos estáticos (segundos)
SEND_FILE_MAX_AGE=31536000

# ================================
# CONFIGURACIÓN DE IMÁGENES
# ================================

# Calidad de compresión de imágenes (1-100)
IMAGE_QUALITY=85

# Tamaños máximos de imágenes
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080

# ================================
# CONFIGURACIÓN DE REPORTES
# ================================

# Formato por defecto para reportes
REPORT_FORMAT=pdf

# Carpeta para reportes generados
REPORTS_FOLDER=reports

# ================================
# CONFIGURACIÓN DE MAPAS
# ================================

# API key para Google Maps (si se usa)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Configuración de mapas por defecto
MAP_CENTER_LAT=-38.9538
MAP_CENTER_LNG=-72.3311
MAP_DEFAULT_ZOOM=13

# ================================
# CONFIGURACIÓN DE BACKUP
# ================================

# Carpeta para backups
BACKUP_FOLDER=backups

# Frecuencia de backup automático (en días)
AUTO_BACKUP_FREQUENCY=7

# Retención de backups (en días)
BACKUP_RETENTION_DAYS=30

# ================================
# CONFIGURACIÓN DE API
# ================================

# Límite de requests por minuto
API_RATE_LIMIT=100

# Timeout para requests API (segundos)
API_TIMEOUT=30

# Versión de la API
API_VERSION=v1

# ================================
# CONFIGURACIÓN DE DESARROLLO
# ================================

# Mostrar queries SQL (solo desarrollo)
SQLALCHEMY_ECHO=false

# Profiling (solo desarrollo)
FLASK_PROFILING=false

# ================================
# NOTAS IMPORTANTES
# ================================

# 1. NUNCA subir archivos .env a repositorios
# 2. Usar valores únicos y seguros para SECRET_KEY y SECURITY_PASSWORD_SALT
# 3. En producción, usar PostgreSQL y configurar todas las variables de seguridad
# 4. Verificar que todas las carpetas mencionadas existan en el servidor
# 5. Para Railway/Heroku, las variables se configuran en el dashboard de la plataforma
# 6. Para desarrollo local, crear el archivo .env con estos valores